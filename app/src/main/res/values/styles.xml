<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppToolbarPopup" parent="AppTheme">
        <item name="actionMenuTextColor">@color/blue_btn_bg_color</item>
    </style>

    <style name="AppToolbar" parent="AppTheme">
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>


    <declare-styleable name="refresh">
        <attr name="refreshtype" format="string" />
    </declare-styleable>

</resources>
